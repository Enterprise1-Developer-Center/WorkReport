<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginLeft="@dimen/dp_10"
      android:layout_marginRight="@dimen/dp_10"
      android:orientation="vertical"
      >
    <EditText
        android:id="@id/proj_code_edittext"
        style="@style/AddProjectEditText"
        android:inputType="number"
        android:drawableLeft="@drawable/ic_looks_one"
        android:hint="@string/project_code"
        />
    <EditText
        android:id="@id/proj_name_edittext"
        style="@style/AddProjectEditText"
        android:inputType="text"
        android:drawableLeft="@drawable/ic_whatshot"
        android:hint="@string/project_name"
        />
    <EditText
        android:id="@id/start_date_edittext"
        android:clickable="true"
        android:focusable="false"
        style="@style/AddProjectEditText"
        android:inputType="date"
        android:drawableLeft="@drawable/ic_flight_takeoff"
        android:hint="@string/start_date"
        />
    <EditText
        android:id="@id/end_date_edittext"
        android:clickable="true"
        android:focusable="false"
        style="@style/AddProjectEditText"
        android:inputType="date"
        android:drawableLeft="@drawable/ic_flight_land"
        android:hint="@string/end_date"
        />
    <EditText
        android:id="@id/dept_name_edittext"
        android:clickable="true"
        android:focusable="false"
        style="@style/AddProjectEditText"
        android:inputType="text"
        android:drawableLeft="@drawable/ic_confirmation_number"
        android:hint="@string/dept_code"
        />
  </LinearLayout>
  <ProgressBar
      android:id="@id/progress_bar"
      android:layout_width="@dimen/dp_36"
      android:layout_height="@dimen/dp_36"
      android:layout_gravity="center"
      android:visibility="invisible"
      />

</FrameLayout>