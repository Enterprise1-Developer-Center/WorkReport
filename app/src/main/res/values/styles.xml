<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="AppTheme.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

  <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

  <style name="BaseMainItemContainer">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">?android:attr/actionBarSize</item>
    <item name="android:orientation">horizontal</item>
    <item name="android:background">?android:selectableItemBackground</item>
  </style>

  <style name="DateMainItemContainer" parent="BaseMainItemContainer">
    <item name="android:id">@id/date_container</item>
  </style>

  <style name="GroupMainItemContainer" parent="BaseMainItemContainer">
    <item name="android:id">@id/group_container</item>
  </style>

  <style name="PersonMainItemContainer" parent="BaseMainItemContainer">
    <item name="android:id">@id/person_container</item>
  </style>

  <style name="StartTimeMainItemContainer" parent="BaseMainItemContainer">
    <item name="android:id">@id/start_time_container</item>
  </style>

  <style name="EndTimeMainItemContainer" parent="BaseMainItemContainer">
    <item name="android:id">@id/end_time_container</item>
  </style>

  <style name="CodeMainItemContainer" parent="BaseMainItemContainer">
    <item name="android:id">@id/code_container</item>
  </style>

  <style name="ProjectMainItemContainer" parent="BaseMainItemContainer">
    <item name="android:id">@id/project_container</item>
  </style>

  <style name="LastEditMainItemContainer" parent="BaseMainItemContainer">
    <item name="android:id">@id/last_edit_container</item>
  </style>

  <style name="BaseOfMainItemImageView">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_marginLeft">@dimen/dp_10</item>
  </style>

  <style name="DateMainItemImageView" parent="BaseOfMainItemImageView">
    <item name="android:src">@drawable/ic_today</item>
  </style>

  <style name="GroupMainItemImageView" parent="BaseOfMainItemImageView">
    <item name="android:src">@drawable/ic_group</item>
  </style>

  <style name="PersonMainItemImageView" parent="BaseOfMainItemImageView">
    <item name="android:src">@drawable/ic_person</item>
  </style>

  <style name="StartTimeMainItemImageView" parent="BaseOfMainItemImageView">
    <item name="android:src">@drawable/ic_timer</item>
  </style>

  <style name="EndTimeMainItemImageView" parent="BaseOfMainItemImageView">
    <item name="android:src">@drawable/ic_timer_off</item>
  </style>

  <style name="CodeMainItemImageView" parent="BaseOfMainItemImageView">
    <item name="android:src">@drawable/ic_format_list_numbered</item>
  </style>

  <style name="ProjectMainItemImageView" parent="BaseOfMainItemImageView">
    <item name="android:src">@drawable/ic_flight_takeoff</item>
  </style>

  <style name="LastEditMainItemImageView" parent="BaseOfMainItemImageView">
    <item name="android:src">@drawable/ic_edit</item>
  </style>

  <style name="BaseOfMainItemTextView" parent="TextAppearance.AppCompat.Body2">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_marginLeft">@dimen/dp_10</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:typeface">monospace</item>
  </style>

  <style name="DateMainItemTextView" parent="BaseOfMainItemTextView">
    <item name="android:id">@id/date_textview</item>
  </style>

  <style name="GroupMainItemTextView" parent="BaseOfMainItemTextView">
    <item name="android:id">@id/group_textview</item>
  </style>

  <style name="PersonMainItemTextView" parent="BaseOfMainItemTextView">
    <item name="android:id">@id/person_textview</item>
  </style>

  <style name="StartTimeMainItemTextView" parent="BaseOfMainItemTextView">
    <item name="android:id">@id/start_time_textview</item>
  </style>

  <style name="EndTimeMainItemTextView" parent="BaseOfMainItemTextView">
    <item name="android:id">@id/end_time_textview</item>
  </style>

  <style name="CodeMainItemTextView" parent="BaseOfMainItemTextView">
    <item name="android:id">@id/code_textview</item>
  </style>

  <style name="ProjectMainItemTextView" parent="BaseOfMainItemTextView">
    <item name="android:id">@id/project_textview</item>
  </style>
  <style name="LastEditMainItemTextView" parent="BaseOfMainItemTextView">
    <item name="android:id">@id/last_edit_textview</item>
  </style>

  <!-- Splash Screen theme. -->
  <style name="SplashTheme" parent="AppTheme.NoActionBar">
    <item name="android:windowBackground">@drawable/splash_background</item>
  </style>

</resources>
