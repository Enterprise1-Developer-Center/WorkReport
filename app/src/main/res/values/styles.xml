<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="AppTheme.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

  <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

  <style name="BaseMainItemContainer">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">?android:attr/actionBarSize</item>
    <item name="android:orientation">horizontal</item>
    <item name="android:background">?android:selectableItemBackground</item>
  </style>

  <style name="DateMainItemContainer" parent="BaseMainItemContainer">
    <item name="android:id">@id/date_container</item>
  </style>

  <style name="GroupMainItemContainer" parent="BaseMainItemContainer">
    <item name="android:id">@id/group_container</item>
  </style>

  <style name="PersonMainItemContainer" parent="BaseMainItemContainer">
    <item name="android:id">@id/person_container</item>
  </style>

  <style name="StartTimeMainItemContainer" parent="BaseMainItemContainer">
    <item name="android:id">@id/start_time_container</item>
  </style>

  <style name="EndTimeMainItemContainer" parent="BaseMainItemContainer">
    <item name="android:id">@id/end_time_container</item>
  </style>

  <style name="WorkTimeMainItemContainer" parent="BaseMainItemContainer">
    <item name="android:id">@id/work_time_container</item>
  </style>

  <style name="CodeMainItemContainer" parent="BaseMainItemContainer">
    <item name="android:id">@id/code_container</item>
  </style>

  <style name="ProjectMainItemContainer" parent="BaseMainItemContainer">
    <item name="android:id">@id/project_container</item>
  </style>

  <style name="LastEditMainItemContainer" parent="BaseMainItemContainer">
    <item name="android:id">@id/last_edit_container</item>
  </style>

  <style name="BaseMainItemImageView">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_marginLeft">@dimen/dp_10</item>
  </style>

  <style name="DateMainItemImageView" parent="BaseMainItemImageView">
    <item name="android:src">@drawable/ic_today</item>
  </style>

  <style name="GroupMainItemImageView" parent="BaseMainItemImageView">
    <item name="android:src">@drawable/ic_group</item>
  </style>

  <style name="PersonMainItemImageView" parent="BaseMainItemImageView">
    <item name="android:src">@drawable/ic_person</item>
  </style>

  <style name="StartTimeMainItemImageView" parent="BaseMainItemImageView">
    <item name="android:src">@drawable/ic_timer</item>
  </style>

  <style name="EndTimeMainItemImageView" parent="BaseMainItemImageView">
    <item name="android:src">@drawable/ic_timer_off</item>
  </style>

  <style name="WorkTimeMainItemImageView" parent="BaseMainItemImageView">
    <item name="android:src">@drawable/ic_timelapse</item>
  </style>

  <style name="CodeMainItemImageView" parent="BaseMainItemImageView">
    <item name="android:src">@drawable/ic_format_list_numbered</item>
  </style>

  <style name="ProjectMainItemImageView" parent="BaseMainItemImageView">
    <item name="android:src">@drawable/ic_flight_takeoff</item>
  </style>

  <style name="LastEditMainItemImageView" parent="BaseMainItemImageView">
    <item name="android:src">@drawable/ic_edit</item>
  </style>

  <style name="BaseMainItemTextView" parent="TextAppearance.AppCompat.Body1">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_marginLeft">@dimen/dp_10</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:typeface">monospace</item>
  </style>

  <style name="DateMainItemTextView" parent="BaseMainItemTextView">
    <item name="android:id">@id/date_textview</item>
  </style>

  <style name="GroupMainItemTextView" parent="BaseMainItemTextView">
    <item name="android:id">@id/group_textview</item>
  </style>

  <style name="PersonMainItemTextView" parent="BaseMainItemTextView">
    <item name="android:id">@id/person_textview</item>
  </style>

  <style name="StartTimeMainItemTextView" parent="BaseMainItemTextView">
    <item name="android:id">@id/start_time_textview</item>
  </style>

  <style name="EndTimeMainItemTextView" parent="BaseMainItemTextView">
    <item name="android:id">@id/end_time_textview</item>
  </style>

  <style name="WorkTimeMainItemTextView" parent="BaseMainItemTextView">
    <item name="android:id">@id/work_time_textview</item>
  </style>

  <style name="CodeMainItemTextView" parent="BaseMainItemTextView">
    <item name="android:id">@id/code_textview</item>
  </style>

  <style name="ProjectMainItemTextView" parent="BaseMainItemTextView">
    <item name="android:id">@id/project_textview</item>
  </style>

  <style name="LastEditMainItemTextView" parent="BaseMainItemTextView">
    <item name="android:id">@id/last_edit_textview</item>
  </style>


  <style name="BasePwChangeTextInputLayout">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginStart">@dimen/dp_20</item>
    <item name="android:layout_marginEnd">@dimen/dp_20</item>
  </style>

  <style name="NowPwChangeTextInputLayout" parent="BasePwChangeTextInputLayout">
    <item name="android:id">@id/now_text_input_layout</item>
  </style>

  <style name="NewPwChangeTextInputLayout" parent="BasePwChangeTextInputLayout">
    <item name="android:id">@id/new_text_input_layout</item>
  </style>

  <style name="NewConfirmPwChangeTextInputLayout" parent="BasePwChangeTextInputLayout">
    <item name="android:id">@id/new_confirm_text_input_layout</item>
  </style>

  <style name="BasePwChangeEditText">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:gravity">center</item>
    <item name="android:inputType">textPassword</item>
    <item name="android:maxLines">1</item>
    <item name="android:maxLength">20</item>
    <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Title</item>
    <item name="android:textColorHint">@color/colorAccent</item>
  </style>

  <style name="NowPwChangeEditText" parent="BasePwChangeEditText">
    <item name="android:id">@id/now_edit_text</item>
    <item name="android:hint">@string/now_password</item>
    <item name="android:imeOptions">actionNext</item>
  </style>

  <style name="NewPwChangeEditText" parent="BasePwChangeEditText">
    <item name="android:id">@id/new_edit_text</item>
    <item name="android:hint">@string/new_password</item>
    <item name="android:imeOptions">actionNext</item>
  </style>

  <style name="NewConfirmPwChangeEditText" parent="BasePwChangeEditText">
    <item name="android:id">@id/new_confirm_edit_text</item>
    <item name="android:hint">@string/new_password_confirm</item>
    <item name="android:imeOptions">actionDone</item>
  </style>

  <style name="BaseStatisticsTotalTextView">
    <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
    <item name="android:background">@drawable/rectangle_solid_border_2</item>
  </style>

  <style name="StatisticsTotalItemTitleTextView" parent="BaseStatisticsTotalTextView">
    <item name="android:layout_width">@dimen/dp_80</item>
    <item name="android:layout_height">@dimen/dp_40</item>
    <item name="android:gravity">top|center_horizontal</item>
  </style>

  <style name="StatisticsTotalItemValueTextView" parent="BaseStatisticsTotalTextView">
    <item name="android:layout_width">@dimen/dp_80</item>
    <item name="android:layout_height">@dimen/dp_40</item>
  </style>

  <style name="OperationRatioSubjectTextView">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
    <item name="android:gravity">center</item>
    <item name="android:layout_marginTop">@dimen/dp_20</item>
  </style>
  <style name="BaseOpDetailItemTextView">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">@dimen/dp_30</item>
    <item name="android:layout_weight">1</item>
    <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
  </style>

  <!-- Splash Screen theme. -->
  <style name="SplashTheme" parent="AppTheme.NoActionBar">
    <item name="android:windowBackground">@drawable/splash_background</item>
  </style>

</resources>
