<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="AppTheme.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
    <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    <item name="android:statusBarColor">@android:color/transparent</item>
  </style>

  <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

  <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

  <style name="BaseMainItemImageView">
    <item name="android:layout_width">@dimen/dp_30</item>
    <item name="android:layout_height">@dimen/dp_30</item>
    <item name="android:scaleType">fitXY</item>
    <item name="android:layout_marginLeft">?android:attr/actionBarSize</item>
    <item name="android:id">@id/imageview</item>
  </style>

  <style name="BaseMainItemTextView">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">?attr/actionBarSize</item>
    <item name="android:layout_marginLeft">?android:attr/actionBarSize</item>
    <item name="android:layout_marginRight">@dimen/dp_30</item>
    <item name="android:gravity">left|center_vertical</item>
    <item name="android:textColor">@android:color/black</item>
    <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
    <item name="android:id">@id/textview</item>
  </style>

  <style name="DateMainItemTextView" parent="BaseMainItemTextView">
    <item name="android:id">@id/date_textview</item>
  </style>

  <style name="GroupMainItemTextView" parent="BaseMainItemTextView">
    <item name="android:id">@id/group_textview</item>
  </style>

  <style name="PersonMainItemTextView" parent="BaseMainItemTextView">
    <item name="android:id">@id/person_textview</item>
  </style>

  <style name="StartTimeMainItemTextView" parent="BaseMainItemTextView">
    <item name="android:id">@id/start_time_textview</item>
  </style>

  <style name="EndTimeMainItemTextView" parent="BaseMainItemTextView">
    <item name="android:id">@id/end_time_textview</item>
  </style>

  <style name="WorkTimeMainItemTextView" parent="BaseMainItemTextView">
    <item name="android:id">@id/work_time_textview</item>
  </style>

  <style name="CodeMainItemTextView" parent="BaseMainItemTextView">
    <item name="android:id">@id/code_textview</item>
  </style>

  <style name="ProjectMainItemTextView" parent="BaseMainItemTextView">
    <item name="android:id">@id/project_textview</item>
  </style>

  <style name="LastEditMainItemTextView" parent="BaseMainItemTextView">
    <item name="android:id">@id/last_edit_textview</item>
  </style>


  <style name="BasePwChangeTextInputLayout">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginStart">@dimen/dp_20</item>
    <item name="android:layout_marginEnd">@dimen/dp_20</item>
  </style>

  <style name="NowPwChangeTextInputLayout" parent="BasePwChangeTextInputLayout">
    <item name="android:id">@id/now_text_input_layout</item>
  </style>

  <style name="NewPwChangeTextInputLayout" parent="BasePwChangeTextInputLayout">
    <item name="android:id">@id/new_text_input_layout</item>
  </style>

  <style name="NewConfirmPwChangeTextInputLayout" parent="BasePwChangeTextInputLayout">
    <item name="android:id">@id/new_confirm_text_input_layout</item>
  </style>

  <style name="BasePwChangeEditText">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:gravity">center</item>
    <item name="android:inputType">textPassword</item>
    <item name="android:maxLines">1</item>
    <item name="android:maxLength">20</item>
    <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Title</item>
    <item name="android:textColorHint">@color/colorAccent</item>
  </style>

  <style name="NowPwChangeEditText" parent="BasePwChangeEditText">
    <item name="android:id">@id/now_edit_text</item>
    <item name="android:hint">@string/now_password</item>
    <item name="android:imeOptions">actionNext</item>
  </style>

  <style name="NewPwChangeEditText" parent="BasePwChangeEditText">
    <item name="android:id">@id/new_edit_text</item>
    <item name="android:hint">@string/new_password</item>
    <item name="android:imeOptions">actionNext</item>
  </style>

  <style name="NewConfirmPwChangeEditText" parent="BasePwChangeEditText">
    <item name="android:id">@id/new_confirm_edit_text</item>
    <item name="android:hint">@string/new_password_confirm</item>
    <item name="android:imeOptions">actionDone</item>
  </style>

  <style name="BaseStatisticsTotalTextView">
    <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
    <item name="android:background">@drawable/rectangle_solid_border_2</item>
    <item name="android:gravity">center</item>
  </style>

  <style name="StatisticsTotalItemTitleTextView" parent="BaseStatisticsTotalTextView">
    <item name="android:layout_width">@dimen/dp_150</item>
    <item name="android:layout_height">?attr/actionBarSize</item>
  </style>

  <style name="StatisticsTotalItemValueTextView" parent="BaseStatisticsTotalTextView">
    <item name="android:layout_width">@dimen/dp_150</item>
    <item name="android:layout_height">?attr/actionBarSize</item>
  </style>

  <style name="OperationRatioSubjectTextView">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textAppearance">@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle</item>
    <item name="android:gravity">center</item>
  </style>

  <style name="BaseOpDetailItemTextView">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">@dimen/dp_40</item>
    <item name="android:layout_weight">1</item>
    <item name="android:gravity">center</item>
    <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
  </style>

  <style name="OpDetailItemSubjectTextView" parent="BaseOpDetailItemTextView">
    <item name="android:background">@color/colorIndigo_200</item>
  </style>

  <style name="OpDetailItemTotalTextView" parent="BaseOpDetailItemTextView">
    <!--<item name="android:background">@color/colorIndigo_200</item>-->
  </style>

  <!-- Splash Screen theme. -->
  <style name="SplashTheme" parent="AppTheme.NoActionBar">
    <item name="android:windowBackground">@drawable/splash_background</item>
  </style>

  <style name="AddProjectEditText">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:maxLines">1</item>
    <item name="android:maxLength">100</item>
    <item name="android:textAppearance">?android:attr/textAppearanceMediumInverse</item>
    <item name="android:textColorHint">@color/colorAccent</item>
    <item name="android:background">?attr/editTextBackground</item>
    <item name="android:gravity">center</item>
    <item name="android:textColor">?attr/editTextColor</item>
    <item name="android:textColorHint">@android:color/darker_gray</item>
  </style>

  <style name="AddProjectTextView">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:maxLines">1</item>
    <item name="android:maxLength">100</item>
    <item name="android:textAppearance">?android:attr/textAppearanceMediumInverse</item>
    <item name="android:textColorHint">@color/colorAccent</item>
    <item name="android:background">?attr/editTextBackground</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:textColor">?attr/editTextColor</item>
  </style>


</resources>
